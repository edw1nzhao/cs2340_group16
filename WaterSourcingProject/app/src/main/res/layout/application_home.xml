<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="edu.gatech.group16.watersourcingproject.controller.HomeActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:id="@+id/fullscreen_content_controls"
        style="?metaButtonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Space android:layout_height="wrap_content"
                        android:layout_width="200dp" />

                    <Button
                        android:text="@string/logout_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/logout_button"
                        android:layout_gravity="top|right"
                        android:background="@color/colorPrimary"
                        tools:ignore="RtlHardcoded"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:text="@string/user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/label_main"
                    android:textSize="30sp" />

                <TextView
                    android:text="@string/label_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:id="@+id/email_field" />

                <TextView
                    android:text="@string/label_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_field" />

                <TextView
                    android:text="@string/label_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/account_field" />

                <TextView
                    android:text="@string/label_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/password_field" />

                <Button
                    android:text="@string/available"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/available_button"
                    android:background="@color/colorButton"
                    android:textSize="12sp" />

                <Button
                    android:text="@string/edit_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/save_changes"
                    android:background="@color/colorButton"
                    android:textSize="12sp" />

                <Button
                    android:text="@string/button_newWR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/new_waterReport"
                    android:background="@color/colorButton" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
