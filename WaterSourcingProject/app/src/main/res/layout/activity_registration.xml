<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="edu.gatech.group16.watersourcingproject.controller.RegistrationActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="vertical"
            tools:ignore="UselessParent"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    app:srcCompat="@mipmap/water_logo"
                    android:id="@+id/logo"
                    android:padding="20dp"
                    android:layout_weight="0.07"
                    android:layout_marginBottom="30dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="0dp"
                    android:layout_width="match_parent">

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/registration_password"
                    android:layout_weight="1"
                    android:hint="@string/hint_email"
                    android:background="@android:color/white"
                    android:layout_below="@+id/registration_email"
                    android:layout_alignStart="@+id/registration_email"
                    android:layout_marginTop="29dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/registration_email_view"
                    tools:text="@string/label_email"
                    android:layout_above="@+id/registration_email"
                    android:layout_alignStart="@+id/registration_email" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/registration_email"
                    android:layout_weight="1"
                    android:hint="@string/hint_email"
                    android:background="@android:color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignStart="@+id/registration_name" />

                <TextView
                    android:text="@string/label_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:layout_below="@+id/registration_email"
                    android:layout_alignStart="@+id/registration_password"
                    android:layout_marginTop="13dp" />

                <TextView
                    android:text="@string/label_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/registration_name_view"
                    android:layout_below="@+id/logo"
                    android:layout_alignStart="@+id/registration_name" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/registration_name"
                    android:layout_weight="1"
                    android:hint="@string/hint_email"
                    android:background="@android:color/white"
                    android:layout_below="@+id/registration_name_view"
                    android:layout_centerHorizontal="true" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:id="@+id/account_type_spinner"
                    android:layout_below="@+id/registration_password"
                    android:layout_alignStart="@+id/registration_password"
                    android:layout_alignEnd="@+id/registration_password" />

                <TextView
                    android:text="@string/label_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_marginTop="13dp"
                    android:layout_below="@+id/registration_password"
                    android:layout_alignStart="@+id/account_type_spinner" />

                <Button
                    android:text="@string/login_registration_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_account_button"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/account_type_spinner"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorButton"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
